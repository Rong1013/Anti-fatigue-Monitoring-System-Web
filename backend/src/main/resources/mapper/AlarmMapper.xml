<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fatigue.monitoring.mapper.AlarmMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fatigue.monitoring.entity.Alarm">
        <id column="id" property="id"/>
        <result column="alarm_code" property="alarmCode"/>
        <result column="alarm_name" property="alarmName"/>
        <result column="alarm_type" property="alarmType"/>
        <result column="alarm_level" property="alarmLevel"/>
        <result column="device_id" property="deviceId"/>
        <result column="device_code" property="deviceCode"/>
        <result column="alarm_value" property="alarmValue"/>
        <result column="threshold_value" property="thresholdValue"/>
        <result column="alarm_time" property="alarmTime"/>
        <result column="handle_status" property="handleStatus"/>
        <result column="handle_user_id" property="handleUserId"/>
        <result column="handle_time" property="handleTime"/>
        <result column="handle_remark" property="handleRemark"/>
        <result column="deleted" property="deleted"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, alarm_code, alarm_name, alarm_type, alarm_level, device_id, device_code,
        alarm_value, threshold_value, alarm_time, handle_status, handle_user_id,
        handle_time, handle_remark, deleted,
        create_by, create_time, update_by, update_time, remark
    </sql>

    <!-- 分页查询告警列表 -->
    <select id="selectAlarmPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM alarm
        <where>
            deleted = 0
            <if test="alarm.alarmCode != null and alarm.alarmCode != ''">
                AND alarm_code LIKE CONCAT('%', #{alarm.alarmCode}, '%')
            </if>
            <if test="alarm.alarmName != null and alarm.alarmName != ''">
                AND alarm_name LIKE CONCAT('%', #{alarm.alarmName}, '%')
            </if>
            <if test="alarm.alarmType != null and alarm.alarmType != ''">
                AND alarm_type = #{alarm.alarmType}
            </if>
            <if test="alarm.alarmLevel != null and alarm.alarmLevel != ''">
                AND alarm_level = #{alarm.alarmLevel}
            </if>
            <if test="alarm.deviceCode != null and alarm.deviceCode != ''">
                AND device_code LIKE CONCAT('%', #{alarm.deviceCode}, '%')
            </if>
            <if test="alarm.handleStatus != null">
                AND handle_status = #{alarm.handleStatus}
            </if>
            <if test="startTime != null and startTime != ''">
                AND alarm_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND alarm_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY alarm_time DESC
    </select>

    <!-- 根据告警编号查询告警 -->
    <select id="selectByAlarmCode" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM alarm
        WHERE alarm_code = #{alarmCode}
        AND deleted = 0
    </select>

</mapper>
